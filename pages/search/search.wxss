
.up{
    display: flex;
    justify-content: space-between;
    margin-top: 13rpx;
    padding: 0 50rpx;
}

input{
    width: 50%;
    height: 60rpx;
    margin: 5rpx 0 0 60rpx;
    font-size: 35rpx;
    border: 1rpx solid #4d9999;
    border-radius: 10rpx;
    background-color: rgba(255, 200, 200, 0.2);
}

button{
    margin-top: 5rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.info{
    margin: 23rpx 10rpx 0 10rpx;
    border: 3rpx solid #c3c3c3;
    box-shadow: 5rpx 5rpx 9rpx #408080;
    padding: 9rpx;
    border-radius: 7rpx;
    background-color: rgba(210, 189, 189, 0.3);
}


.title{
    padding-left: 4rpx;
    font-size: 40rpx;
    }

.tu{
    display: flex;
    justify-content: space-between;
    padding: 3rpx;
}
.img{
    width: 40%;
    height: 280rpx;
}
image{
    width: 100%;
    height: 100%;
}

.name{
    width: 58%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.name view{
    color: #005b5b;
    text-shadow: 2rpx 4rpx 15rpx #9d9d9d;
    font-size: 26rpx;
}
